<%- include('../partials/header') %>

<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <form action="/habits/<%= habit.id %>?_method=PUT" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <label>Name:</label>
              <input type="text" name="name" value="<%= name %>">
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <label>Category:</label>
              <input type="text" name="category" value="<%= category %>">
            </div>
          </div>
          <input class="waves-effect waves-light btn white-text" type="submit" value="Update Habit">
        </form>
        <form action="/habits/<%= habit.id %>?_method=DELETE" method="POST">
          <input type="submit" id="delete-btn" value="Delete" class="white-text red waves-effect waves-light btn">
        </form>
      </div>
    </div>  
  </div>
</div>


<%- include('../partials/footer') %>