<%- include('../partials/header') %>

<div class="row">
  <div class="col m12 l8 offset-l2">
    <div class="card">
      <div class="card-content">
        <form action="/habits/<%= habit.id %>?_method=PUT" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <label>Habit Name:</label>
              <input type="text" name="name" value="<%= name %>">
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <label>Category:</label>
              <input type="text" name="category" value="<%= category %>">
            </div>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Update Habite
            <i class="material-icons right">send</i>
          </button>
          <!-- <input class="waves-effect waves-light btn white-text" type="submit" value="Update Habit"> -->
        </form>
        <div id="delete-btn">
          <form action="/habits/<%= habit.id %>?_method=DELETE" method="POST">
            <button class="btn waves-effect waves-light red" type="submit" name="action">Delete
              <i class="material-icons right">delete</i>
            </button>
            <!-- <input type="submit" value="Delete" class="white-text red waves-effect waves-light btn"> -->
          </form>
        </div>
      </div>
    </div>  
  </div>
</div>


<%- include('../partials/footer') %>